<?xml version="1.0" encoding="UTF-8"?>
<Context path="/carrental">
    <!-- MySQL DataSource Configuration for Tomcat -->
    <Resource name="jdbc/car_rental_db"
              auth="Container"
              type="javax.sql.DataSource"
              maxTotal="100"
              maxIdle="30"
              maxWaitMillis="10000"
              username="root"
              password=""
              driverClassName="com.mysql.cj.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/car_rental_db?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true"/>
</Context>
